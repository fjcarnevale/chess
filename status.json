{% autoescape true %}
{
   "game_id":"{{game.game_id}}",
   "state":"{{game.state}}",
   "players":[
      {% for player in game.players %}
      {
      
         "name":"{{player.name}}",
         "color":"{{player.color}}"
      }
      {% if not loop.last %},{% endif %}
      {% endfor %}
   ],
   "turn":"{{game.turn}}"
}
{% endautoescape %}
