{% autoescape true %}
{
   "game_id":"{{game.game_id}}",

   "state":"{{game.state}}",

   "turn":"{{game.turn}}"

   {% if game.board.moves|length > 0 %}
   {% set move = game.board.moves[game.board.moves|length - 1] %}
   ,
   "last_move":
   {
      "number":"{{move.number}}",
      "name":"{{move.name}}",
      "src_row":"{{move.src_row}}",
      "src_col":"{{move.src_col}}",
      "dest_row":"{{move.dest_row}}",
      "dest_col":"{{move.dest_col}}"
   }
   {% endif %}
}
{% endautoescape %}
